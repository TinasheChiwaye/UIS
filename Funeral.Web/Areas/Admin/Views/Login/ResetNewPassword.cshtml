@model Funeral.Model.NewPassword
@{
    Layout = null;
}
<!DOCTYPE html>

<html>
<head runat="server">
    <title>New Password</title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <asp:PlaceHolder runat="server">
        <link href='~/Content/bootstrap.min.css' rel="stylesheet" />
        <link href='~/font-awesome/css' rel="stylesheet" />
        <link href='~/Content/animate.css' rel="stylesheet" />
        <link href='~/Content/style.css' rel="stylesheet" />
    </asp:PlaceHolder>
    <style type="text/css">
        .auto-style1 {
            width: 400px;
            height: auto;
        }

        .responsive {
            width: 100%;
            height: auto;
        }
    </style>
</head>
<body style="background-color: #fafafa;" class="pull-center">
    @using (Html.BeginForm("ResetNewPassword", "Login", FormMethod.Post))
    {
        @Html.AntiForgeryToken();
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(x => x.Code)
        @Html.HiddenFor(x => x.secureId)
        @Html.HiddenFor(x => x.ForgotId)
        <div class="col-sm-4"></div>
        <div class="col-sm-4 text-center animated fadeInDown">
            <div class="ibox">
                <div class="ibox-title" style="background-color: red;">
                    <h2>
                        <img alt="" class="auto-style1" src='~/Admin/Images/unpluggit.png' />
                    </h2>
                    <h2 style="color: white; font-weight: bold">UIS Policy Administration</h2>
                </div>
                <div class="ibox-content" style="border: 2px solid red;">
                    <span class="clear">
                        <span class="block m-t-xs">
                            <strong>Support Contacts</strong><br />
                            <label>Tel:&nbsp 011 321 0194</label><br />
                            <label>Email:&nbsp support@unpluggit.co.za</label><br />
                            <label>&nbsp &nbsp  log a Call For Help Desk</label><br />
                        </span>
                    </span>
                    <hr />
                    <div>
                        <div class="form-group">
                            @Html.TextBoxFor(x => x.Password, new { @type = "password", @placeholder = "Enter new password", @class = "form-control", @required = true })
                            @Html.ValidationMessageFor(x => x.Password, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            @Html.TextBoxFor(x => x.ConfirmPassword, new { @type = "password", @placeholder = "Enter confirm password", @class = "form-control", @required = true })
                            @Html.ValidationMessageFor(x => x.ConfirmPassword, "", new { @class = "text-danger" })
                        </div>
                        <input type="submit" class="btn btn-primary block full-width m-b" style="background-color: red; font-weight: bold" id="Button1" value="Submit" />
                        <a href="/Admin/Login.aspx"><b><small>Login</small></b></a>
                        <a href="/Admin/NewRegistration.aspx"><b><small>New Registration</small></b></a>
                        <p class="m-t"><b><small>Unplugg IT Solutions &copy; @DateTime.Now.Year</small></b> </p>
                        <p>
                            @if (TempData["forgotmessage"] != null)
                            {
                                <label>@Html.Raw(TempData["forgotmessage"])</label>
                            }

                        </p>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-sm-4"></div>
    }
    <script src='~/Scripts/jquery-2.1.1.js' type="text/javascript"></script>
    <script src='~/Scripts/bootstrap.min.js' type="text/javascript"></script>
</body>
</html>
