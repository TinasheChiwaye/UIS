@model Funeral.Model.FuneralServiceVM
@{
    Layout = null; 
}
<div class="row">
    <div class="col-lg-12">
        <div class="table-responsive">
            <div>
                <table class="table table-striped table-bordered table-hover" cellspacing="0" rules="all" border="1" id="MainContent_ucPaymentHistory1_gvInvoices" style="width:100%;border-collapse:collapse;">
                    <tbody>
                        @if (Model.FuneralPaymentModelList != null && Model.FuneralPaymentModelList.Count > 0)
                        {
                            <tr>
                                <th class="visible-lg" scope="col">Date paid</th>
                                <th scope="col">Amount</th>
                                <th class="visible-lg" scope="col">Recieved by</th>
                                <th class="visible-lg" scope="col">Months Paid &amp; Notes</th>
                                <th scope="col">Actions</th>
                            </tr>
                            foreach (var item in Model.FuneralPaymentModelList)
                            {
                                <tr>
                                    <td class="visible-lg">@item.DatePaid</td>
                                    <td>@Model.Currency @item.AmountPaid</td>
                                    <td class="visible-lg">@item.RecievedBy</td>
                                    <td class="visible-lg">@item.Notes</td>
                                    <td>
                                        &nbsp;
                                        <a id="gvInvoices" title="Click here Print " href="@Url.Action("PrintForm","Funeral")"><i class="glyphicon glyphicon-print"></i></a>

                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="6">There are no payment data.</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
