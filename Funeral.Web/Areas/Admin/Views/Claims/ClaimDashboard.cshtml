@model dynamic
@{
    ViewBag.Title = "Claim Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script type="text/javascript">
    function RedirectToClaimPage(CurrentValue) {
        $.post("@Url.Action("Index","Claims")", { Status: CurrentValue }, function (result) {});
    }
</script>
<div class="row">
    <div class="col-lg-12">
        <div class="ibox ">
            <div class="ibox-title">
                <h5>Claim Dashboard</h5>
            </div>
            <div class="ibox-content">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="table-responsive">
                            <table id="ClaimStatusDataTable" class="table table-striped table-bordered dt-responsive nowrap" width="100%" cellspacing="0">
                                <thead>
                                    <tr>
                                        <th>Status</th>
                                        <th>Count</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @{
                                        if (Model.getStatusCount != null ? (Model.getStatusCount.Count > 0 ? true : false) : false)
                                        {
                                            for (int i = 0; i < Model.getStatusCount.Count; i++)
                                            {
                                                <tr>
                                                    <td><b>@Model.getStatusCount[i].Status</b></td>
                                                    <td><a href="@Url.Action("Index","Claims",new {Status= Model.getStatusCount[i].Status})">@Model.getStatusCount[i].StatusCount</a></td>
                                                </tr>
                                            }
                                        }
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

