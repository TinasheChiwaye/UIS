
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<div class="wrapper wrapper-content animated fadeInRight">

    <div class="row">
        <div class="col-lg-12">
            <div class="ibox ">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="ibox float-e-margins">
                            <div class="ibox-title">
                                <h5>Payment Details</h5>
                            </div>
                            <div class="ibox-content" style="height: 570px;">
                                <div class="col-lg-6">
                                    <div class="form-group">
                                        <label>Select Branch</label>
                                        <select name="ctl00$MainContent$ddlBankBranch" id="MainContent_ddlBankBranch" class="form-control">
                                            <option value="0">Select Branch</option>

                                        </select>
                                    </div>
                                    <div class="form-group">
                                        <label>Recieved By</label>
                                        <input name="ctl00$MainContent$txtChildren" id="MainContent_txtChildren" type="text" class="form-control">
                                    </div>
                                </div>
                                <div class="col-lg-6">
                                    <div class="form-group">
                                        <label>Method</label>
                                        <select name="ctl00$MainContent$ddlMethod" id="MainContent_ddlMethod" class="form-control m-b">
                                            <option value="0">Select</option>
                                            <option value="1">Cash</option>
                                            <option value="2">Easy Pay</option>
                                            <option value="3">Debit Order</option>
                                            <option value="4">Bank Depost</option>
                                            <option value="5">EFT</option>
                                            <option value="6">Other</option>

                                        </select>
                                    </div>
                                    <div class="form-group">
                                        <label>Amount</label>
                                        <input name="ctl00$MainContent$txtAmount" maxlength="255" id="MainContent_txtAmount" type="text" class="form-control">
                                    </div>

                                </div>
                                <div class="col-lg-12">
                                    <div class="form-group">
                                        <label>Notes</label>
                                        <textarea id="TextArea1" cols="20" name="S1" rows="2"></textarea>
                                    </div>
                                </div>
                                <div class="col-lg-6">
                                    <div class="col-lg-6">
                                        <div class="form-group">
                                            <input type="submit" name="ctl00$MainContent$btnAdd" value="Add Payment" id="MainContent_btnAdd" class="btn btn-md btn-primary" style="width:95%;">
                                        </div>
                                    </div>
                                    <div class="col-lg-6">
                                        <div class="form-group">
                                            <input type="submit" name="ctl00$MainContent$btnPrint" value="Print" id="MainContent_btnPrint" class="btn btn-md btn-primary" style="width:95%;">
                                        </div>
                                    </div>
                                </div>
                                <div class="ibox float-e-margins">
                                    <div class="ibox-title">
                                        <h5>Payment History</h5>
                                    </div>
                                    <div class="ibox-content">
                                        <div class="col-lg-12">
                                            <div class="form-group">
                                                <div class="form-group">
                                                    <div>

                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


</div>
