@model Funeral.Web.Areas.Admin.Models.ViewModel.PrintViewModel
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>UIS Policy Administration</title>
    <style>
        .dash {
            border: 1px dashed #cccccc;
            border-collapse: collapse;
        }
    </style>
</head>
<body>
    @if (Model != null)
    {

        <div id="HideArea">

            <table border="0" style="width: 100%; font-family: 'Times New Roman';font-size:10px;" cellpadding="2" cellspacing="0">
                <tbody>
                    @if (Model.Type == 2)
                    {
                        <tr>
                            <th>
                                <h4 align="center">
                                    Duplicate
                                </h4>
                            </th>
                        </tr>
                    }
                    <tr>
                        <th>
                            <h5  style="font-weight:bold;">
                                @Model.ParlourName
                            </h5>
                        </th>
                    </tr>
                    <tr>
                        <th class="dash"></th>
                    </tr>
                    <tr>

                        <td style="font-weight:bold">
                            <span id="lblReceiptNumber">Receipt Number : @Model.Id</span>
                        </td>
                    </tr>
                    <tr>
                        <td style="font-weight:bold">
                            <span id="lbladd1">@Model.BusinessAddressLine1</span>
                        </td>
                    </tr>
                    <tr>
                        <td style="font-weight:bold">
                            <span id="lbladd2">@Model.BusinessAddressLine2</span>
                        </td>
                    </tr>
                    <tr>
                        <td style="font-weight:bold">
                            <span id="lbladd3">@Model.BusinessAddressLine3</span>
                        </td>
                    </tr>
                    <tr>
                        <td style="font-weight:bold">
                            <span id="lbladd4">@Model.BusinessPostalCode</span>
                        </td>
                    </tr>
                    <tr>
                        <td style="font-weight:bold">
                            <span id="lblfpsnub">@Model.FSBNumber</span>
                        </td>
                    </tr>
                    <tr>
                        <td style="font-weight:bold">
                            <span id="lblTelCell">@Model.telephoneNumber</span>
                        </td>
                    </tr>
                    <tr>
                        <td><img src="@Model.Barcode" height="30" width="100" /></td>
                    </tr>
                </tbody>
            </table>
        </div>
        <div id="PrintDiv">
            <table border="0" style="width: 100%; font-family: 'Times New Roman';font-size:10px;" cellpadding="1" cellspacing="0">
                <thead></thead>
                <tbody>
                    <tr>
                        <th>
                            <h4 align="center"></h4>
                        </th>
                    </tr>
                    @*@if (Model.Type == 1)
                        {
                            <tr>
                                <th>
                                    <h5 align="center" style="font-weight:bold;">
                                        @Model.ParlourName
                                    </h5>
                                </th>
                            </tr>
                        }*@

                    <tr>
                        <td style="font-weight:bold"><label>Receipt Number.....</label></td>
                        <td style="font-weight:bold">@Model.Id</td>
                    </tr>
                    <tr>
                        <td style="font-weight:bold"><label>Policy Number.....</label></td>
                        <td style="font-weight:bold">@Model.PolicyNumber</td>
                    </tr>
                    <tr>
                        <td style="font-weight:bold"><label>Date Paid.....</label></td>
                        <td style="font-weight:bold">@Model.DatePaid</td>
                    </tr>
                    <tr>
                        <td style="font-weight:bold"><label>Amount Paid.....</label></td>
                        <td style="font-weight:bold">@Model.AmountPaid</td>
                    </tr>
                    <tr>
                        <td style="font-weight:bold"><label>Policy Holder.....</label></td>
                        <td style="font-weight:bold">@Model.SurName @Model.FullName</td>
                    </tr>
                    <tr>
                        <td style="font-weight:bold"><label>Received By.....</label></td>
                        <td style="font-weight:bold">@Model.ReceivedBy</td>
                    </tr>
                    <tr>
                        <td style="font-weight:bold"><label>Time Printed.....</label></td>
                        <td style="font-weight:bold">@Model.TimePrinted</td>
                    </tr>
                    <tr>
                        <td style="font-weight:bold"><label>Underwriter.....</label></td>
                        <td style="font-weight:bold">@Model.Underwriter</td>
                    </tr>
                    <tr>
                        <td style="font-weight:bold"><label>Month Paid.....</label></td>
                        <td style="font-weight:bold">@Model.MonthPaid</td>
                    </tr>

                </tbody>
            </table>
        </div>
    }
</body>
</html>

<script>
    function printDiv() {
        var printContents = document.getElementById('PrintDiv').innerHTML;
        var originalContents = document.body.innerHTML;
        document.body.innerHTML = printContents;
        window.print();
        document.body.innerHTML = originalContents;
    }
    window.onload = printDiv;
</script>
