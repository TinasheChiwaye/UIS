    <style>
        #AjaxLoader {
            position: absolute;
            top: 0px;
            right: 0px;
            width: 100%;
            height: 100%;
            background-color: #666;
            background-image: url('../../Content/images/ajax-loader.gif');
            background-repeat: no-repeat;
            background-position: center;
            z-index: 10000000;
            opacity: 0.4;
            filter: alpha(opacity=40); /* For IE8 and earlier */
        }



        .fixed_header {
            table-layout: fixed;
            border-collapse: collapse;
        }

            .fixed_header tbody {
                display: block;
                width: 100%;
                overflow: auto;
                height: 350px;
            }

            .fixed_header thead tr {
                display: block;
            }

            .fixed_header thead {
                background: #f5f5f6;
                color: #686b6d;
            }

            .fixed_header th, .fixed_header td {
                padding: 5px;
                text-align: left;
                width: 500px;
            }

        .fixed_header-bordered th {
            border: 1px solid #dee2e6;
        }


        .fixed_header > thead > tr > th, .fixed_header > tbody > tr > th, .fixed_header > tfoot > tr > th, .fixed_header > thead > tr > td, .fixed_header > tbody > tr > td, .fixed_header > tfoot > tr > td {
            border-top: 1px solid #e7eaec;
            line-height: 1.42857;
            padding: 8px;
            /* vertical-align: top; */
        }

        input.largerCheckbox {
            width: 20PX;
            height: 20PX;
            margin: 0;
        }

        input[type=number] {
            -moz-appearance: textfield;
        }

        input::-webkit-outer-spin-button,
        input::-webkit-inner-spin-button {
            -webkit-appearance: none;
            margin: 0;
        }
    </style>
</head>
<body>
    <div class="loader" id="AjaxLoader" style="display:none;">
    </div>
    <div id="wrapper">
        <nav class="navbar-default navbar-static-side" role="navigation">
            <div class="sidebar-collapse">
                <ul class="nav" id="side-menu">
                    <li class="nav-header">
                        <div class="dropdown profile-element">
                            <a data-toggle="dropdown" class="dropdown-toggle" href="#">
                                <span class="clear">
                                    <span class="block m-t-xs">
                                        <strong class="font-bold">
                                            @if (HttpContext.Current.Session["UserName"] != null && HttpContext.Current.Session["UserName"].ToString() != null)
                                            {
                                                <span>@HttpContext.Current.Session["UserName"].ToString()</span>
                                            }
                                        </strong>
                                    </span>
                                </span>
                            </a>
                            <span class="clear" style="color: white; font-size: 10px">
                                <span class="block m-t-xs">
                                    <strong>Support Contacts</strong><br />
                                    <asp:Label runat="server" ID="Label2" Text="">Tel:&nbsp 011 321 0194</asp:Label><br />
                                    <asp:Label runat="server" ID="Label3" Text="">Email:&nbsp support@unpluggit.co.za</asp:Label><br />
                                    <asp:Label runat="server" ID="Label4" Text="">&nbsp &nbsp &nbsp &nbsp &nbsp &nbsp &nbsp   log a Call For Help Desk</asp:Label><br />
                                </span>
                            </span>

                            <ul class="dropdown-menu animated fadeInRight m-t-xs">
                                <li>
                                    <a href="@Url.Action("LogOut", "Account",new {area = ""})"><i class="fa fa-fw fa-power-off"></i> Log Out</a>
                                </li>
                            </ul>
                        </div>
                        <div class="logo-element">
                            <asp:LoginName runat="server" ID="LoginName1" />
                        </div>
                    </li>
                    <li>
                        <a href="@Url.Action("Index","Dashboard",new { Area="Admin"})"><i class="fa fa-th-large"></i><span class="nav-label">Dashboard</span></a>
                    </li>
                    @if (Session["SessionVariablesClass"] == null)
                    {
                        Response.Redirect("~/Admin/Login.aspx", false);
                    }
                    else
                    {
                        List<Funeral.Model.tblPageModel> RightsModels = Session["SessionVariablesClass"] as List<Funeral.Model.tblPageModel>;
                        foreach (var item in RightsModels.Where(x => x.MenuLevel == 0 && x.IsMenu).OrderBy(x => x.MenuOrder).ToList())
                        {
                            if (item.MVCURL == "#")
                            {
                                <li>
                                    <a href="~/Default.aspx"><i class="@item.IconClass"></i> <span class="nav-label">@item.PageName</span><span class="fa arrow"></span></a>
                                    <ul class="nav nav-second-level collapse">
                                        @foreach (var chielditem in RightsModels.Where(x => x.ParentRoleId == item.ID).ToList())
                                        {
                                            if (chielditem.MenuLevel == 1)
                                            {
                                                <li>
                                                    <a id="childmenu_@item.ID" href="@string.Format("{0}://{1}{2}{3}", Request.Url.Scheme, Request.Url.Authority, Url.Content("~").Remove(Url.Content("~").Length - 1), chielditem.MVCURL)">@chielditem.PageName</a>
                                                </li>
                                            }
                                            else
                                            {
                                                <li>
                                                    <a href="#"><span class="nav-label">@chielditem.PageName</span><span class="fa arrow"></span></a>
                                                    <ul class="nav nav-third-level">
                                                        @foreach (var thirdLevelitem in RightsModels.Where(x => x.ParentRoleId == chielditem.ID).ToList())
                                                        {
                                                            <li>
                                                                <a id="childmenu_@chielditem.ID" href="@string.Format(" {0}://{1}{2}{3}", Request.Url.Scheme, Request.Url.Authority, Url.Content("~").Remove(Url.Content("~").Length - 1), thirdLevelitem.MVCURL)">@thirdLevelitem.PageName</a>
                                                            </li>
                                                        }
                                                    </ul>


                                                </li>

                                            }

                                        }
                                    </ul>
                                </li>
                            }
                            else
                            {

                                <li>
                                    <a href="@Url.Content("~"+item.MVCURL)"><i class="@item.IconClass"></i><span class="nav-label">@item.PageName</span></a>
                                </li>
                            }
                        }
                    }
                    <li class="nav-footer">
                        <div class="dropdown profile-element">
                            @{
                                if (Session["Loginparlourid"] != null)
                                {
                                    Funeral.Model.ApplicationSettingsModel modelCompany = Funeral.BAL.ToolsSetingBAL.GetApplictionByParlourID(Guid.Parse(Session["Loginparlourid"].ToString()));
                                    if (modelCompany != null)
                                    {
                                        if (modelCompany.ApplicationLogo != null)
                                        {
                                            string base64String = Convert.ToBase64String(modelCompany.ApplicationLogo, 0, modelCompany.ApplicationLogo.Length);
                                            var CompanylogoUrl = "data:image/png;base64," + base64String;

                                            <img id="imgCompanyLogo" src="@CompanylogoUrl" height="200px" width="200px" alt="CompanyLogo" />
                                        }
                                    }
                                }
                            }
                        </div>
                    </li>
                </ul>
            </div>
        </nav>
        <div id="page-wrapper" class="gray-bg">
            <div class="row border-bottom">
                <nav class="navbar navbar-static-top white-bg" role="navigation" style="margin-bottom: 0">
                    <div class="navbar-header">
                        <a class="navbar-minimalize minimalize-styl-2 btn btn-primary " href="#"><i class="fa fa-bars"></i> </a>
                    </div>
                    <ul class="nav navbar-top-links navbar-right">
                        <li class="treeclick">
                            @if (HttpContext.Current.Session["ApplicationName"] != null && HttpContext.Current.Session["ApplicationName"].ToString() != null)
                            {
                                <strong>Scheme name:</strong> @HttpContext.Current.Session["ApplicationName"].ToString()
                            }
                            else
                            {
                                <strong>Scheme name:</strong>
                            }

                        </li>
                        <li>
                            <a href="@Url.Action("LogOut", "Account",new {area = ""})"><i class="fa fa-fw fa-power-off"></i> Log Out</a>
                        </li>
                    </ul>
                </nav>
            </div>
            <div class="wrapper wrapper-content animated fadeInRight">
                <div class="row">
                    @if (TempData["message"] != null)
                    {
                        <div class="col-sm-12" id="lblnotificationMessage">
                            @Html.Raw(TempData["message"].ToString())
                        </div>
                    }
                    @RenderBody()
                </div>
            </div>

            <div class="footer">
                <div class="pull-right">
                </div>
                <div>
                    <strong>Copyright</strong> Unplugg IT Solutions &copy; 2014-@DateTime.Now.Year
                </div>
            </div>
        </div>
    </div>

    <script src="~/Scripts/jquery-ui-1.8.20.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/plugins/metisMenu/jquery.metisMenu.js"></script>
    <script src="~/Scripts/plugins/pace/pace.min.js"></script>
    <script src="~/Scripts/plugins/slimScroll/jquery.slimscroll.min.js"></script>
    <script src="~/Scripts/app/inspinia.js"></script>
    <script src="~/Scripts/Plugins/dataTables/jquery.dataTables.js"></script>
    <script src="~/Scripts/plugins/datapicker/bootstrap-datepicker.js"></script>
    <script src="~/Scripts/plugins/blueimp/jquery.blueimp-gallery.min.js"></script>
    <script src="~/Scripts/plugins/iCheck/icheck.min.js"></script>
    <script>
        jQuery(function ($) {
            $('.i-checks').iCheck({
                checkboxClass: 'icheckbox_square-green',
                radioClass: 'iradio_square-green',
            });
            $(document).ajaxStart(function () {
                $('#AjaxLoader').show();
            }).ajaxStop(function () {
                $('#AjaxLoader').hide();
            });
            setTimeout(function () {
                $("#lblnotificationMessage").hide('blind', {}, 500)
            }, 5000);

            $(document).ready(function () {
                $('.nav li').removeClass("active"); // if you want to style the li
                $('.nav li a').removeClass("active"); // if you want to style a specific a
                var pageTitle = window.location.pathname.replace(/^.*\/([^/]*)/, "$1");
                ///// Apply active class to selected page link
                $('.nav a').each(function () {
                    var oldMenu = $(this).attr('href').toLowerCase();
                    var GetActualPath = "@Request.Url.PathAndQuery.ToString().ToLower()"
                    var RemoveDomain = oldMenu.replace(GetActualPath, "");
                    oldMenu = oldMenu.replace(RemoveDomain, "")
                    var selectedMenu = window.location.pathname.toLocaleLowerCase() + window.location.search.toLowerCase();
                    if (oldMenu == selectedMenu) {
                        $(this).removeClass('active');// // if you want to style a specific a
                        $(this).closest('li').removeClass('active');// if you want to style the li
                        $(this).closest('li').closest('ul').removeClass('active in');
                        $("li").removeClass('active');
                        $("li a").removeClass('active');
                        $("ul").removeClass('active in');

                        $(this).addClass('active');// // if you want to style a specific a
                        $(this).closest('li').addClass('active');// if you want to style the li
                        $(this).closest('li').closest('ul').addClass('active in');
                        $(this).closest('li').closest('ul').parents("ul").addClass('active in');
                    }
                });
            });


        });
    </script>

    @RenderSection("scripts", required: false)
    <script src="~/Scripts/app/messagebox.js"></script>

    @Html.Partial("~/Views/Shared/MessageBox.cshtml")
    @{
        Html.RenderPartial("~/Areas/Admin/Views/Dashboard/_DashboardModal.cshtml");

    }
    <div id="LoadPartialView_ManageClaims"></div>
</body>
</html>